{
  "name": "qreditmotion",
  "version": "0.2.0",
  "private": true,
  "description": "Qredit Motion Wallet",
  "homepage": "./",
  "author": "qredit.io | hello@qredit.io",
  "main": "./public/electron.js",
  "bin": {
    "eslint": "bin/eslint.js"
  },
  "scripts": {
    "build": "react-scripts build && react-snapshot",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "ebuild": "npm run build && node_modules/.bin/build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "build:linux": "npm run build && electron-packager . qredit --platform linux --arch x64 --name qreditmotion --executableName qreditmotion --out dist/ --overwrite && electron-installer-debian --src dist/qredit-linux-x64 --dest dist/installers/ --arch amd64"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.6.0",
    "@personare/react-freshdesk-widget": "^0.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "antd": "^4.16.13",
    "apexcharts": "^3.27.3",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "browserslist": "^4.16.8",
    "concurrently": "^6.2.1",
    "cookie": "^0.4.1",
    "dayjs": "^1.10.6",
    "electron-is-dev": "^2.0.0",
    "immutable": "^4.0.0-rc.14",
    "loadash": "^1.0.0",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "qrcode.react": "^1.0.1",
    "qs": "^6.10.1",
    "react": "^16.14.0",
    "react-apexcharts": "^1.3.9",
    "react-autobind": "^1.0.6",
    "react-bootstrap": "^1.6.1",
    "react-datepicker": "^4.2.1",
    "react-dom": "^16.14.0",
    "react-helmet": "^6.1.0",
    "react-highlight-words": "^0.16.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-qr-code": "^1.0.5",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-script-tag": "^1.1.2",
    "react-scripts": "3.4.1",
    "react-select": "^3.2.0",
    "react-snapshot": "^1.3.0",
    "react-sparklines": "^1.7.0",
    "react-step-builder": "^2.0.10",
    "react-toastify": "^6.2.0",
    "react-tooltip": "^4.2.13",
    "react-webcam-barcode-scanner": "0.0.2-rc2",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-form": "^8.3.7",
    "redux-thunk": "^2.3.0",
    "sass": "^1.38.1",
    "swiper": "^6.4.5",
    "typescript": "^3.9.10",
    "url-join": "^4.0.1",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^13.2.3",
    "electron-builder": "^22.11.7",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.1.0"
  },
  "engines": {
    "node": "^14.0.0 || >=14.0.0"
  },
  "build": {
    "productName": "Qredit Motion",
    "appId": "io.qredit.motion-wallet",
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "afterSign": "scripts/notarize.js",
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "vPrefixedTagName": false
    },
    "extraResources": [
      "app-update.yml"
    ],
    "protocols": {
      "name": "Qredit URI scheme",
      "schemes": [
        "xqr"
      ],
      "role": "Viewer"
    },
    "directories": {
      "output": "build/target"
    },
    "files": [
      "dist/**/*",
      "assets",
      "static"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "asarUnpack": [
        "**/*.node"
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "tar.gz",
        "snap"
      ],
      "desktop": {
        "MimeType": "x-scheme-handler/qredit;"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libudev-dev"
      ]
    },
    "dmg": {
      "icon": "build/icons/icon.icns"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "proxy": "https://unifiedapi.qredit.cloud",
  "reactSnapshot": {
    "exclude": [
      "/account/**",
      "/dashboard/**",
      "/insight/**"
    ]
  }
}
